    animation: glowFloat4 20s ease-in-out infinite;
}

.glow-orb-3 {
    top: 25%;
    right: 45%;
    width: 320px;
    height: 320px;
    background: radial-gradient(circle, rgba(30, 58, 138, 0.42) 0%, rgba(30, 58, 138, 0.2) 50%, transparent 75%);
    animation: glowFloat5 16s ease-in-out infinite;
}

.glow-orb-4 {
    bottom: 15%;
    left: 55%;
    width: 260px;
    height: 260px;
    background: radial-gradient(circle, rgba(65, 105, 225, 0.4) 0%, rgba(65, 105, 225, 0.18) 50%, transparent 75%);
    animation: glowFloat6 14s ease-in-out infinite;
}

.glow-orb-5 {
    top: 50%;
    left: 5%;
    width: 290px;
    height: 290px;
    background: radial-gradient(circle, rgba(91, 143, 249, 0.38) 0%, rgba(91, 143, 249, 0.17) 50%, transparent 75%);
    animation: glowFloat7 17s ease-in-out infinite;
}

.glow-orb-6 {
    top: 12%;
    left: 35%;
    width: 310px;
    height: 310px;
    background: radial-gradient(circle, rgba(65, 105, 225, 0.43) 0%, rgba(65, 105, 225, 0.19) 50%, transparent 75%);
    animation: glowFloat8 19s ease-in-out infinite;
}

.glow-orb-7 {
    bottom: 8%;
    right: 35%;
    width: 270px;
    height: 270px;
    background: radial-gradient(circle, rgba(30, 58, 138, 0.4) 0%, rgba(30, 58, 138, 0.18) 50%, transparent 75%);
    animation: glowFloat9 21s ease-in-out infinite;
}

.glow-orb-8 {
    top: 35%;
    right: 8%;
    width: 285px;
    height: 285px;
    background: radial-gradient(circle, rgba(91, 143, 249, 0.41) 0%, rgba(91, 143, 249, 0.19) 50%, transparent 75%);
    animation: glowFloat10 15s ease-in-out infinite;
}

.glow-orb-9 {
    bottom: 35%;
    left: 25%;
    width: 295px;
    height: 295px;
    background: radial-gradient(circle, rgba(65, 105, 225, 0.39) 0%, rgba(65, 105, 225, 0.17) 50%, transparent 75%);
    animation: glowFloat11 13s ease-in-out infinite;
}

.glow-orb-10 {
    top: 65%;
    right: 60%;
    width: 275px;
    height: 275px;
    background: radial-gradient(circle, rgba(91, 143, 249, 0.42) 0%, rgba(91, 143, 249, 0.2) 50%, transparent 75%);
    animation: glowFloat12 22s ease-in-out infinite;
}

.hero-content {
    max-width: 1400px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 6rem;
    align-items: center;
    position: relative;
    z-index: 2;
}

.hero-text {
    padding-right: 0;
    padding-left: 5rem;
    text-align: left;
}

.hero-title {
    font-family: 'Blue Sky Noto', sans-serif;
    font-size: 3rem;
    font-weight: 400;
    line-height: 1.3;
    margin-bottom: 2rem;
    letter-spacing: -0.01em;
}

.title-main {
    display: block;
    font-size: 1.6em;
    white-space: nowrap;
    background: linear-gradient(135deg, #ffffff 0%, #c0d4ff 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    opacity: 0;
    animation: fadeInUp 1s ease 0.2s forwards;
}

.title-sub {
    display: block;
    font-size: 0.7em;
    background: linear-gradient(135deg, #5B8FF9 0%, #4169E1 50%, #1E3A8A 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    opacity: 0;
    animation: fadeInUp 1s ease 0.4s forwards;
}

.hero-description {
    font-size: 1.2rem;
    color: var(--night-sky);
    opacity: 0.8;
    margin-bottom: 3rem;
    line-height: 1.8;
    opacity: 0;
    animation: fadeInUp 1s ease 0.6s forwards;
}

.hero-action {
    opacity: 0;
    animation: fadeInUp 1s ease 0.8s forwards;
    text-align: left;
}

.btn-primary {
    padding: 1rem 2.5rem;
    background: var(--dream-gradient);
    color: var(--warm-white);
    border: none;
    border-radius: 50px;
    font-size: 1rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 10px 30px rgba(107, 115, 255, 0.3);
}

.btn-primary:hover {
    transform: translateY(-3px);
    box-shadow: 0 15px 40px rgba(107, 115, 255, 0.4);
}

/* 产品展示 Section */
.product-intro {
    padding: 0;
    background: var(--black);
    position: relative;
    margin-bottom: 5rem;
}

.intro-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0;
    align-items: center;
    max-width: 100%;
    margin: 0;
}

.intro-image {
    position: relative;
    overflow: hidden;
    width: 100%;
    height: 100%;
}

.intro-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
}


/* 第一张图片右侧边缘渐变透明 */
.intro-image-fade-right {
    position: relative;
}

.intro-image-fade-right::after {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    width: 40%;
    background: linear-gradient(to right, transparent 0%, rgba(0, 0, 0, 0.3) 40%, rgba(0, 0, 0, 0.7) 70%, rgba(0, 0, 0, 1) 100%);
    pointer-events: none;
    z-index: 2;
}

.intro-text {
    padding: 4rem 6rem;
    display: flex;
    align-items: center;
    justify-content: center;
}

.intro-text h2 {
    font-family: 'Blue Sky Noto', sans-serif;
    font-size: 1.75rem;
    font-weight: 400;
    line-height: 1.5;
    color: var(--white);
    background: linear-gradient(135deg, #ffffff 0%, #c0d4ff 50%, #5B8FF9 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    letter-spacing: -0.01em;
}

/* 反向布局 - 第二张图片全宽 */
.product-intro-reverse .intro-content {
    grid-template-columns: 1fr;
    position: relative;
}

.product-intro-reverse .intro-image {
    grid-column: 1 / -1;
    width: 100%;
    height: 0;
    padding-bottom: 50%;
    overflow: hidden;
    position: relative;
}

.product-intro-reverse .intro-image img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center 75%;
    /* 测试：下面截掉0px */
}

.product-intro-reverse .intro-text {
    position: absolute;
    top: 35%;
    left: 50%;
    width: 50%;
    transform: translateY(-50%);
    z-index: 10;
    padding: 2rem 6rem;
    background: rgba(0, 0, 0, 0.6);
    backdrop-filter: none;
    border-radius: 0;
    display: flex;
    align-items: center;
    justify-content: center;
}

.product-intro-reverse .intro-text h2 {
    position: relative;
    left: -4rem;
}

/* Dyson风格产品展示区域 */
.dyson-section {
    min-height: 100vh;
    background: #000000;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 4rem 2rem;
}

.dyson-content {
    width: 100%;
    max-width: 1600px;
    margin: 0 auto;
    position: relative;
}

/* Section 1: 大标题在上方居中 */
.dyson-text-top {
    text-align: center;
    margin-bottom: 3rem;
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.8s ease, transform 0.8s ease;
}

.dyson-text-top.visible {
    opacity: 1;
    transform: translateY(0);
}

.dyson-text-top h2 {
    font-family: 'Blue Sky Noto', sans-serif;
    font-size: 2rem;
    font-weight: 300;
    line-height: 1.4;
    background: linear-gradient(135deg, #FFFFFF 0%, #4169E1 50%, #FFFFFF 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    letter-spacing: 0.05em;
}

.dyson-images {
    position: relative;
    width: 100%;
}

.dyson-img-large {
    width: 100%;
    height: auto;
    display: block;
}

/* 两张图横向并排 */
.dyson-grid-2 {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0;
    align-items: stretch;
    margin-top: 2rem;
    max-width: 85%;
    margin-left: auto;
    margin-right: auto;
}

.dyson-img-grid {
    width: 100%;
    height: 100%;
    display: block;
    object-fit: cover;
}

/* Section 2: 文字在左上角 */
.dyson-text-left {
    position: absolute;
    top: 2rem;
    left: 2rem;
    z-index: 10;
}

.dyson-text-left h2 {
    font-family: 'Blue Sky Noto', sans-serif;
    font-size: 1.5rem;
    font-weight: 300;
    line-height: 1.3;
    color: var(--white);
    letter-spacing: 0.05em;
}

.dyson-img-center {
    width: 70%;
    height: auto;
    display: block;
    margin: 0 auto;
}

/* 第二个section图片16:9裁剪 */
.section-temperature .dyson-images {
    position: relative;
    width: 100%;
    height: 0;
    padding-bottom: 56.25%; /* 16:9 ratio */
}

.section-temperature .dyson-img-large {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center 75%; /* 上面裁3，下面裁1，75% = 3/(3+1) * 100% */
}

/* Section 4: 左右分栏 - Dyson风格 */
.dyson-split {
    display: grid;
    grid-template-columns: 45% 55%;
    gap: 0;
    align-items: start;
}

.section-zone-control .dyson-split {
    align-items: start;
}

.dyson-left {
    padding: 4rem 3rem 4rem 3rem;
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.8s ease, transform 0.8s ease;
}

.section-zone-control .dyson-left {
    padding-top: 0;
    padding-left: 6rem;
}

.dyson-left.visible {
    opacity: 1;
    transform: translateY(0);
}

.dyson-left h2 {
    font-family: 'Blue Sky Noto', sans-serif;
    font-size: 1.8rem;
    font-weight: 300;
    line-height: 1.4;
    background: linear-gradient(135deg, #FFFFFF 0%, #4169E1 50%, #FFFFFF 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 2rem;
    letter-spacing: 0.02em;
}

.dyson-left p {
    font-size: 1.2rem;
    color: var(--white);
    margin-bottom: 3rem;
    opacity: 0.7;
    font-weight: 300;
}

.dyson-img-half {
    width: 100%;
    height: auto;
    display: block;
}

.dyson-right {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    padding-right: 2rem;
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.8s ease 0.2s, transform 0.8s ease 0.2s;
}

.section-zone-control .dyson-right {
    align-items: flex-start;
    padding-top: 0;
    padding-right: 4rem;
    justify-content: flex-start;
}

.section-zone-control .dyson-right img {
    width: 100%;
    max-width: 650px;
}

.dyson-right.visible {
    opacity: 1;
    transform: translateY(0);
}

.dyson-right img {
    width: 90%;
    max-width: 600px;
}

/* Hero Image */
.hero-image {
    display: flex;
    justify-content: center;
    align-items: center;
}

.image-container {
    position: relative;
    width: 400px;
    height: 400px;
}

.sleep-visualization {
    position: relative;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.moon-phase {
    position: relative;
    width: 120px;
    height: 120px;
}

.moon {
    width: 100%;
    height: 100%;
    background: var(--moonlight-gradient);
    border-radius: 50%;
    box-shadow: 
        0 0 30px rgba(107, 115, 255, 0.3),
        inset -20px -20px 0 rgba(0, 0, 0, 0.1);
    animation: moonGlow 4s ease-in-out infinite alternate;
}

.moon-glow {
    position: absolute;
    top: -20px;
    left: -20px;
    right: -20px;
    bottom: -20px;
    background: radial-gradient(circle, rgba(107, 115, 255, 0.2), transparent 70%);
    border-radius: 50%;
    animation: glowPulse 3s ease-in-out infinite;
}

.sleep-waves {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 300px;
    height: 300px;
}

.wave {
    position: absolute;
    border: 2px solid rgba(107, 115, 255, 0.3);
    border-radius: 50%;
    animation: waveExpand 6s ease-in-out infinite;
}

.wave-1 {
    width: 200px;
    height: 200px;
    top: 50px;
    left: 50px;
    animation-delay: 0s;
}

.wave-2 {
    width: 250px;
    height: 250px;
    top: 25px;
    left: 25px;
    animation-delay: 2s;
}

.wave-3 {
    width: 300px;
    height: 300px;
    top: 0;
    left: 0;
    animation-delay: 4s;
}

/* 关于我们 */
.about {
    padding: 8rem 2rem;
    background: var(--warm-white);
}

.container {
    max-width: 1200px;
    margin: 0 auto;
}

.about-content {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
}

.section-title {
    font-family: 'Blue Sky Noto', sans-serif;
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--white);
    margin-bottom: 2rem;
    letter-spacing: -0.01em;
}

.section-description {
    font-size: 1.1rem;
    color: var(--night-sky);
    opacity: 0.7;
    line-height: 1.8;
    margin-bottom: 4rem;
}

.about-features {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 3rem;
    margin-top: 4rem;
}

.feature {
    text-align: center;
    padding: 2.5rem 2rem;
    background: rgba(248, 249, 255, 0.6);
    border-radius: 30px;
    transition: all 0.3s ease;
    position: relative;
    overflow: visible;
    backdrop-filter: blur(20px);
    border: none;
    box-shadow: none;
}

.feature::before {
    content: '';
    position: absolute;
    top: -20px;
    left: -20px;
    right: -20px;
    bottom: -20px;
    background: radial-gradient(ellipse at center, 
        rgba(107, 115, 255, 0.15) 0%, 
        rgba(155, 89, 182, 0.08) 30%, 
        rgba(255, 159, 243, 0.05) 60%, 
        transparent 100%);
    border-radius: 50px;
    filter: blur(30px);
    z-index: -1;
}

.feature::after {
    content: '';
    position: absolute;
    top: -10px;
    left: -10px;
    right: -10px;
    bottom: -10px;
    background: radial-gradient(ellipse at center, 
        rgba(255, 255, 255, 0.4) 0%, 
        rgba(255, 255, 255, 0.2) 40%, 
        transparent 80%);
    border-radius: 40px;
    filter: blur(15px);
    z-index: -1;
}

.feature:hover {
    transform: translateY(-10px);
}

.feature:hover::before {
    filter: blur(40px);
    background: radial-gradient(ellipse at center, 
        rgba(107, 115, 255, 0.2) 0%, 
        rgba(155, 89, 182, 0.12) 30%, 
        rgba(255, 159, 243, 0.08) 60%, 
        transparent 100%);
}

.feature-icon {
    margin-bottom: 1.5rem;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    z-index: 1;
}

.icon-circle {
    width: 60px;
    height: 60px;
    background: var(--soft-gradient);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    animation: iconFloat 4s ease-in-out infinite;
}

.icon-circle::before {
    content: '';
    position: absolute;
    width: 20px;
    height: 20px;
    background: var(--warm-white);
    border-radius: 50%;
    opacity: 0.8;
}

.feature h3 {
    font-size: 1rem;
    font-weight: 500;
    color: var(--night-sky);
    margin-bottom: 1rem;
    position: relative;
    z-index: 1;
}

.feature p {
    color: var(--night-sky);
    opacity: 0.7;
    line-height: 1.6;
    font-size: 0.85rem;
    position: relative;
    z-index: 1;
}

/* 产品展示 */
.products {
    padding: 8rem 2rem;
    background: var(--moonlight);
}

.products-content {
    max-width: 1000px;
    margin: 0 auto;
}

.product-showcase {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 6rem;
    align-items: center;
}

.product-image {
    display: flex;
    justify-content: center;
    align-items: center;
}

.sleep-device {
    position: relative;
    width: 300px;
    height: 200px;
    background: var(--moonlight-gradient);
    border-radius: 30px;
    border: 1px solid rgba(107, 115, 255, 0.2);
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 20px 60px rgba(107, 115, 255, 0.1);
    animation: deviceFloat 6s ease-in-out infinite;
}

.device-body {
    width: 250px;
    height: 150px;
    background: var(--warm-white);
    border-radius: 20px;
    position: relative;
    overflow: hidden;
}

.device-glow {
    position: absolute;
    top: -10px;
    left: -10px;
    right: -10px;
    bottom: -10px;
    background: var(--soft-gradient);
    border-radius: 40px;
    opacity: 0.3;
    filter: blur(20px);
    animation: glowPulse 3s ease-in-out infinite;
}

.sleep-indicators {
    position: absolute;
    top: 20px;
    right: 20px;
    display: flex;
    flex-direction: column;
    gap: 8px;
}

.indicator {
    width: 8px;
    height: 8px;
    background: var(--dream-blue);
    border-radius: 50%;
    animation: indicatorPulse 2s ease-in-out infinite;
}

.indicator:nth-child(2) {
    animation-delay: 0.5s;
}

.indicator:nth-child(3) {
    animation-delay: 1s;
}

.product-info {
    padding-left: 2rem;
}

.product-title {
    font-family: 'Inter', sans-serif;
    font-size: 2.2rem;
    font-weight: 700;
    color: var(--night-sky);
    margin-bottom: 1.5rem;
    letter-spacing: -0.01em;
}

.product-description {
    font-size: 1.1rem;
    color: var(--night-sky);
    opacity: 0.7;
    line-height: 1.8;
    margin-bottom: 2rem;
}

.product-benefits {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.benefit {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    background: rgba(255, 255, 255, 0.5);
    border-radius: 25px;
    transition: all 0.3s ease;
    position: relative;
    overflow: visible;
    backdrop-filter: blur(15px);
    border: none;
    box-shadow: none;
}

.benefit::before {
    content: '';
    position: absolute;
    top: -15px;
    left: -15px;
    right: -15px;
    bottom: -15px;
    background: radial-gradient(ellipse at center, 
        rgba(107, 115, 255, 0.12) 0%, 
        rgba(155, 89, 182, 0.06) 40%, 
        transparent 80%);
    border-radius: 40px;
    filter: blur(25px);
    z-index: -1;
}

.benefit::after {
    content: '';
    position: absolute;
    top: -8px;
    left: -8px;
    right: -8px;
    bottom: -8px;
    background: radial-gradient(ellipse at center, 
        rgba(255, 255, 255, 0.3) 0%, 
        rgba(255, 255, 255, 0.1) 50%, 
        transparent 90%);
    border-radius: 35px;
    filter: blur(12px);
    z-index: -1;
}

.benefit:hover {
    transform: translateX(10px);
}

.benefit:hover::before {
    filter: blur(35px);
    background: radial-gradient(ellipse at center, 
        rgba(107, 115, 255, 0.18) 0%, 
        rgba(155, 89, 182, 0.1) 40%, 
        transparent 80%);
}

.benefit-icon {
    position: relative;
    z-index: 1;
}

.icon-dot {
    width: 12px;
    height: 12px;
    background: var(--dream-gradient);
    border-radius: 50%;
    animation: dotPulse 2s ease-in-out infinite;
}

.benefit span:last-child {
    color: var(--night-sky);
    font-weight: 500;
    font-size: 0.85rem;
    position: relative;
    z-index: 1;
}

/* 联系信息 */
.contact {
    padding: 8rem 2rem;
    background: var(--warm-white);
}

.contact-content {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
}

.contact-info {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 3rem;
    margin-top: 4rem;
}

.contact-item {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    padding: 2rem;
    background: rgba(248, 249, 255, 0.6);
    border-radius: 30px;
    transition: all 0.3s ease;
    position: relative;
    overflow: visible;
    backdrop-filter: blur(20px);
    border: none;
    box-shadow: none;
}

.contact-item::before {
    content: '';
    position: absolute;
    top: -20px;
    left: -20px;
    right: -20px;
    bottom: -20px;
    background: radial-gradient(ellipse at center, 
        rgba(107, 115, 255, 0.15) 0%, 
        rgba(155, 89, 182, 0.08) 30%, 
        rgba(255, 159, 243, 0.05) 60%, 
        transparent 100%);
    border-radius: 50px;
    filter: blur(30px);
    z-index: -1;
}

.contact-item::after {
    content: '';
    position: absolute;
    top: -10px;
    left: -10px;
    right: -10px;
    bottom: -10px;
    background: radial-gradient(ellipse at center, 
        rgba(255, 255, 255, 0.4) 0%, 
        rgba(255, 255, 255, 0.2) 40%, 
        transparent 80%);
    border-radius: 40px;
    filter: blur(15px);
    z-index: -1;
}

.contact-item:hover {
    transform: translateY(-5px);
}

.contact-item:hover::before {
    filter: blur(40px);
    background: radial-gradient(ellipse at center, 
        rgba(107, 115, 255, 0.2) 0%, 
        rgba(155, 89, 182, 0.12) 30%, 
        rgba(255, 159, 243, 0.08) 60%, 
        transparent 100%);
}

.contact-icon {
    position: relative;
    z-index: 1;
}

.contact-icon-circle {
    width: 60px;
    height: 60px;
    background: var(--soft-gradient);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    animation: contactFloat 3s ease-in-out infinite;
}

.contact-icon-circle::before {
    content: '';
    position: absolute;
    width: 16px;
    height: 16px;
    background: var(--warm-white);
    border-radius: 50%;
    opacity: 0.9;
}

.contact-details h3 {
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--night-sky);
    margin-bottom: 0.5rem;
    position: relative;
    z-index: 1;
}

.contact-details p {
    color: var(--night-sky);
    opacity: 0.7;
    font-size: 0.8rem;
    position: relative;
    z-index: 1;
}

/* 页脚 */
.footer {
    padding: 3rem 2rem;
    background: var(--night-sky);
    color: var(--warm-white);
}

.footer-content {
    text-align: center;
}

.footer-text p {
    opacity: 0.7;
    font-size: 0.9rem;
}

