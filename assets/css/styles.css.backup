        transform: translate(75px, -85px) scale(1.13);
        opacity: 0.83;
    }
    66% {
        transform: translate(-85px, 55px) scale(0.9);
        opacity: 0.57;
    }
}

@keyframes floatGlow {
    0%, 100% {
        transform: translate(0, 0);
        opacity: 0.4;
    }
    33% {
        transform: translate(50px, -30px);
        opacity: 0.6;
    }
    66% {
        transform: translate(-30px, 40px);
        opacity: 0.5;
    }
}
@keyframes float {
    0%, 100% {
        transform: translateY(0px) rotate(0deg);
    }
    50% {
        transform: translateY(-20px) rotate(5deg);
    }
}

@keyframes fadeInUp {
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes moonGlow {
    0% {
        box-shadow: 
            0 0 30px rgba(107, 115, 255, 0.3),
            inset -20px -20px 0 rgba(0, 0, 0, 0.1);
    }
    100% {
        box-shadow: 
            0 0 50px rgba(107, 115, 255, 0.5),
            inset -20px -20px 0 rgba(0, 0, 0, 0.05);
    }
}

@keyframes glowPulse {
    0%, 100% {
        opacity: 0.3;
        transform: scale(1);
    }
    50% {
        opacity: 0.6;
        transform: scale(1.1);
    }
}

@keyframes waveExpand {
    0%, 100% {
        transform: scale(1);
        opacity: 0.3;
    }
    50% {
        transform: scale(1.1);
        opacity: 0.6;
    }
}

@keyframes deviceFloat {
    0%, 100% {
        transform: translateY(0px);
    }
    50% {
        transform: translateY(-10px);
    }
}

@keyframes iconFloat {
    0%, 100% {
        transform: translateY(0px);
    }
    50% {
        transform: translateY(-5px);
    }
}

@keyframes dotPulse {
    0%, 100% {
        transform: scale(1);
        opacity: 0.8;
    }
    50% {
        transform: scale(1.2);
        opacity: 1;
    }
}

@keyframes contactFloat {
    0%, 100% {
        transform: translateY(0px) rotate(0deg);
    }
    50% {
        transform: translateY(-3px) rotate(2deg);
    }
}

/* 响应式设计 */
@media (max-width: 768px) {
    .nav-menu {
        display: none;
    }
    
    .hero-content {
        grid-template-columns: 1fr;
        text-align: center;
        gap: 3rem;
    }
    
    .hero-title {
        font-size: 2.5rem;
    }
    
    .hero-text {
        padding-right: 0;
    }
    
    .product-showcase {
        grid-template-columns: 1fr;
        gap: 3rem;
    }
    
    .product-info {
        padding-left: 0;
        text-align: center;
    }
    
    .about-features {
        grid-template-columns: 1fr;
    }
    
    .contact-info {
        grid-template-columns: 1fr;
    }
    
    .contact-item {
        flex-direction: column;
        text-align: center;
    }
}

@media (max-width: 480px) {
    .hero-title {
        font-size: 2rem;
    }
    
    .hero-description {
        font-size: 1rem;
    }
    
    .btn-primary {
        padding: 0.8rem 2rem;
        font-size: 0.9rem;
    }
    
    .section-title {
        font-size: 2rem;
    }
    
    .image-container {
        width: 300px;
        height: 300px;
    }
    
    .sleep-device {
        width: 250px;
        height: 150px;
    }
}