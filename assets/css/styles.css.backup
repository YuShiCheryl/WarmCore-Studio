/* 自定义字体 - Blue Sky Noto */
@font-face {
    font-family: 'Blue Sky Noto';
    src: url('../fonts/Blue Sky Noto/Blue Sky Noto Light.ttf') format('truetype');
    font-weight: 300;
    font-style: normal;
}

@font-face {
    font-family: 'Blue Sky Noto';
    src: url('../fonts/Blue Sky Noto/Blue Sky Noto Regular.ttf') format('truetype');
    font-weight: 400;
    font-style: normal;
}

@font-face {
    font-family: 'Blue Sky Noto';
    src: url('../fonts/Blue Sky Noto/Blue Sky Noto Bold.ttf') format('truetype');
    font-weight: 700;
    font-style: normal;
}

/* 黑色背景 + 深蓝主色调 */
:root {
    /* 主色调 */
    --primary-blue: #4169E1;      /* 深蓝色 - 主色 */
    --secondary-blue: #5B8FF9;    /* 亮蓝色 */
    --dark-blue: #1E3A8A;         /* 暗蓝色 */
    
    /* 背景色 */
    --black: #000000;             /* 纯黑背景 */
    --dark-bg: #0A0A0A;           /* 深黑背景 */
    --card-bg: #1A1A1A;           /* 卡片背景 */
    
    /* 辅助色 */
    --white: #ffffff;             /* 白色 - 文字 */
    --light-gray: #CCCCCC;        /* 浅灰 - 次要文字 */
    --medium-gray: #666666;       /* 中灰 */
    
    /* 渐变 */
    --gradient-primary: linear-gradient(135deg, var(--primary-blue), var(--dark-blue));
    --gradient-glow: radial-gradient(circle, var(--primary-blue), transparent);
}

/* 基础重置 */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Blue Sky Noto', 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    background: var(--black);
    color: var(--white);
    line-height: 1.6;
    overflow-x: hidden;
}

/* 深色背景 + 深蓝光影 */
.dream-background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    background: var(--black);
    overflow: hidden;
}

.dream-background::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: 
        radial-gradient(circle at 30% 50%, rgba(65, 105, 225, 0.15) 0%, transparent 25%),
        radial-gradient(circle at 70% 50%, rgba(30, 58, 138, 0.12) 0%, transparent 25%);
    filter: blur(100px);
    animation: floatGlow 20s ease-in-out infinite;
}

.dream-background::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 100%;
    height: 100%;
    background: 
        radial-gradient(ellipse at center, rgba(65, 105, 225, 0.08) 0%, transparent 50%);
    filter: blur(80px);
    animation: glowPulse 10s ease-in-out infinite;
}

/* 浮动形状 */
.floating-shapes {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
}

.shape {
    position: absolute;
    border-radius: 50%;
    background: var(--soft-gradient);
    opacity: 0.1;
    animation: float 20s ease-in-out infinite;
}

.shape-1 {
    width: 200px;
    height: 200px;
    top: 10%;
    left: 10%;
    animation-delay: 0s;
}

.shape-2 {
    width: 150px;
    height: 150px;
    top: 60%;
    right: 15%;
    animation-delay: 7s;
}

.shape-3 {
    width: 100px;
    height: 100px;
    bottom: 20%;
    left: 20%;
    animation-delay: 14s;
}

/* 导航栏 */
.navbar {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    background: rgba(0, 0, 0, 0.98);
    backdrop-filter: blur(20px);
    border-bottom: 1px solid rgba(65, 105, 225, 0.08);
    transition: all 0.3s ease;
}

.nav-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 70px;
}

.nav-logo .logo-text {
    font-family: 'Blue Sky Noto', sans-serif;
    font-size: 1.8rem;
    font-weight: 700;
    color: var(--white);
    text-decoration: none;
    letter-spacing: -0.02em;
}

.nav-menu {
    display: flex;
    list-style: none;
    gap: 2.5rem;
}

.nav-menu a {
    color: var(--night-sky);
    text-decoration: none;
    font-weight: 400;
    font-size: 0.95rem;
    transition: all 0.3s ease;
    position: relative;
}

.nav-menu a:hover {
    color: var(--dream-blue);
}

.nav-menu a::after {
    content: '';
    position: absolute;
    bottom: -5px;
    left: 0;
    width: 0;
    height: 1px;
    background: var(--dream-gradient);
    transition: width 0.3s ease;
}

.nav-menu a:hover::after {
    width: 100%;
}

/* Hero Section */
.hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    padding: 0 2rem;
    background: var(--black);
    position: relative;
    overflow: hidden;
}

/* 多个流动光晕效果 */
.hero::before {
    content: '';
    position: absolute;
    top: 15%;
    left: 10%;
    width: 400px;
    height: 400px;
    background: radial-gradient(
        circle at center,
        rgba(65, 105, 225, 0.5) 0%,
        rgba(65, 105, 225, 0.3) 30%,
        rgba(65, 105, 225, 0.15) 60%,
        transparent 80%
    );
    filter: blur(60px);
    pointer-events: none;
    animation: glowFloat1 12s ease-in-out infinite;
    z-index: 1;
}

.hero::after {
    content: '';
    position: absolute;
    bottom: 10%;
    right: 8%;
    width: 350px;
    height: 350px;
    background: radial-gradient(
        circle at center,
        rgba(91, 143, 249, 0.45) 0%,
        rgba(91, 143, 249, 0.25) 40%,
        rgba(91, 143, 249, 0.12) 70%,
        transparent 85%
    );
    filter: blur(55px);
    pointer-events: none;
    animation: glowFloat2 15s ease-in-out infinite;
    z-index: 1;
}

/* Hero 粒子效果 */
.hero-particles {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 1;
}

/* 额外的流动光晕球 */
